      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css"
    />

    <!-- OWN CSS -->
    <link rel="stylesheet" href="CSS\stylea.css" />
    <link rel="stylesheet" href="CSS\responsive-style.css" />
    <style>
      @import
      url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap');
      body{ font-family: 'Poppins', sans-serif; background: #ececec; }
      .box-area{ width: 100%; max-width: 700px; margin-top: 80px; padding: 40px;
      /* Adjusted padding */ } .right-box{ padding: 40px; /* Adjusted padding */
      width: 100%; /* Make the right box fill the entire box area */ }
      ::placeholder{ font-size: 16px; } .rounded-4{ border-radius: 20px; }
      .rounded-5{ border-radius: 30px; } @media only screen and (max-width:
      768px){ .box-area{ margin: 10px; padding-top: 20px; /* Adjusted
